/* pages/mine/mine.wxss */
.no-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.tabbar{
  margin-top: 20px;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-bottom: 20px;
  border-bottom: 1px solid 	#DCDCDC
}
.item{
  text-align: center
}
.item-title{
  color: grey;
  font-size: 12px;
}
.tab{
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-bottom: 20px;
}
.tab-item{
  height: 40px;
  font-size: 16px;
  line-height: 40px;
  padding-left: 10px;
  padding-right: 10px;
}
.on{
  border-bottom: 4px solid #49AA34;
  color: #49AA34;
}
.info-image{
  width: 100%;
  height: 400px;
}
.navigator-hover{
  color: #49AA34;
}