/* pages/mine/mine.wxss */
.no-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.tabbar{
  margin-top: 20px;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-bottom: 20px;
  border-bottom: 1px solid 	#DCDCDC
}
.item{
  text-align: center
}
.item-title{
  color: grey;
  font-size: 12px;
}
.tab{
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-bottom: 20px;
}
.tab-item{
  height: 40px;
  font-size: 16px;
  line-height: 40px;
  padding-left: 10px;
  padding-right: 10px;
}
.on{
  border-bottom: 4px solid #49AA34;
  color: #49AA34;
}
.info-image{
  width: 100%;
  height: 400px;
}
.navigator-hover{
  color: #49AA34;
}
.info{
  padding-left: 25px;
  
}
.tag-wrapper {
  color: white;
  position: relative;
  display: inline-block;
  width: 160rpx;
  height: 160rpx;
  font-size: 14px;
  margin-right: 30px;
  margin-bottom: 30px;
}
.tag-wrapper image {
  width: 160rpx;
  height: 160rpx;
}
.tag-wrapper text{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%)
}
.fav-movie-wrapper{
  padding: 8px;
  border-bottom: 1px solid	#DCDCDC;
}
.fav-movie-wrapper text{
  display: block
}
.fav-movie-title {
  font-size: 16px;
  margin-bottom: 5px;
}
.fav-movie-directors{
  font-size: 14px;
  color: grey;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.fav-movie-wrapper image{
  display: inline-block;
  width: 160rpx;
  height: 160rpx;
  vertical-align: middle;
}
.fav-movie-info{
  display: inline-block;
  margin-left: 8px;
  width: 200px;
}