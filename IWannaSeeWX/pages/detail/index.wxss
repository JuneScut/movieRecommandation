/* pages/detail/index.wxss */

.banner {
  /* overflow: hidden; */
  overflow-y: scroll;
  min-height: 460rpx;
  position: relative;
  box-shadow: 0 0 10px #111;
  border-bottom: solid 1px #111;
  background-color: #2f2f2f;
}
.banner::-webkit-scrollbar{
  display: none
}
.banner .background {
  width: 130%;
  height: 130%;
  margin-left: -15%;
  margin-top: -15%;
  filter: blur(10px);
  opacity: 0.7;
}

.banner .poster {
  box-shadow: 3px 3px 5px #222;
  position: absolute;
  left: 30rpx;
  top: 40rpx;
  z-index: 1;
  width: 210rpx;
  height: 310rpx;
  padding: 10rpx;
  background-color: rgba(255, 255, 255, 0.4);
}

.banner .poster image {
  width: 100%;
  height: 100%;
}

.banner .info {
  position: absolute;
  color: #fff;
  z-index: 2;
  width: 450rpx;
  left: 270rpx;
  top: 40rpx;
  font-size: 24rpx;
}

.banner .info .title {
  font-size: 46rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.banner .info .score {
  margin-top: 20rpx;
  font-size: 48rpx;
  color: #ffc125;
}

.banner .info .score view {
  font-size: 24rpx;
  display: inline;
  margin-left: 10rpx;
}

.banner .info .subinfo {
  margin-top: 20rpx;
}

.summary {
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 20rpx 20rpx 40rpx 20rpx;
  color: #fafafa;
  background-color: #222;
}

.assess {
  background-color: #2f2f2f;
}

.assess .title {
  padding: 10rpx 20rpx;
  font-size: 34rpx;
  color: #fff;
  font-weight: bold;
  text-shadow: 0 2px 34px #000;
  background: -webkit-gradient(linear, 0 0, 0 100%, from(#333), to(#2f2f2f));
}

.username {
  padding: 10rpx 20rpx;
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
}

.content {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: white;
  font-weight: bold;
  border-bottom: 1rpx solid gray
}

.collection-wrapper{
  position: absolute;
  z-index: 1000;
  top: 400rpx;
  left: 40rpx;
  color: white;
  font-size: 14px;
}
.collection-wrapper image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 2px;
  vertical-align: middle
}
.editor-wrapper{
  position: fixed;
  bottom: 0;
  right: 0;
  background:  rgb(73, 170, 52);
  width: 200rpx;
  border-radius: 10rpx;
  color: white
}
.editor-wrapper image{
  width: 50rpx;
  height: 50rpx;
}
