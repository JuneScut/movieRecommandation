/* pages/firstPage/index.wxss */
.title{
  text-align: center;
}
.tag-wrapepr{
  margin-top: 30px;
  margin-left: 10px;
}
.tag-item{
  display: inline-block;
  margin-right: 40rpx;
  margin-bottom: 20rpx;
  border: 1px solid gray;
  border-radius: 30rpx;
  color: gray;
  padding-left: 14rpx;
  padding-right: 14rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 16px;
}
.tag-item-selected {
  display: inline-block;
  margin-right: 40rpx;
  margin-bottom: 20rpx;
  border: 1px solid #49AA34;
  border-radius: 40rpx;
  color: #49AA34;
  padding-left: 14rpx;
  padding-right: 14rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 16px;
}
.next-step{
  text-align: right;
  margin-right: 10px;
  font-size: 16px;
}

.header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}
 
.header image {
    width: 200rpx;
    height: 200rpx;
}
 
.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}
 
.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
 
.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}
.login-masker{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 999;
  background: white
}
.mask{
  position: absolute;
  width: 100%;
  min-height: 1334rpx;
  top: 0;
  left: 0;
  background: rgba(128, 128, 128, 0.8);
  z-index: 10;
}
